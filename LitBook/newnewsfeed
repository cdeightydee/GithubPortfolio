<script>
    document.addEventListener("DOMContentLoaded", function () {
        const showMoreButtons = document.querySelectorAll('.show-more');
        const showLessButtons = document.querySelectorAll('.show-less');
        const hiddenContents = document.querySelectorAll('.hidden-content');

        showMoreButtons.forEach((button, index) => {
            button.addEventListener('click', () => {
                hiddenContents[index].style.display = 'block';
                showMoreButtons[index].style.display = 'none';
                showLessButtons[index].style.display = 'inline';
            });
        });

        showLessButtons.forEach((button, index) => {
            button.addEventListener('click', () => {
                hiddenContents[index].style.display = 'none';
                showMoreButtons[index].style.display = 'inline';
                showLessButtons[index].style.display = 'none';
            });
        });
    });
</script>

